<div class="container_16 clearfix">
  <div class="grid_16">

    <%= error_messages_for 'client_version' %>
    <%= flash[:notice] %>

    <% form_for @client_version, :html => { :multipart => true } do |f| %>

      <p>
        <%= f.label :client %>
        <%= f.select :client_id, Client.all.map {|c| [c.name, c.id] } %>
      </p>

      <p>
        <%= f.label :version %>
        <%= f.text_field :version, :size => 10 %>
      </p>

      <p>
        <%= f.label :signature, 'DSA Signature' %>
        <%= f.text_field :signature, :size => 36 %>
      </p>

      <p>
        <%= f.label :download %>
        <%= f.file_field :download %>
      </p>

      <p>
        <%= f.label :release_notes %><br />
        <%= f.text_area :release_notes %>
      </p>

      <%= f.submit 'Upload' %>

    <% end %>

  </div>
</div>