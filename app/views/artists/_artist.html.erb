<% if artist.releases.present? %>
<% content_tag_for(:li, artist, :class => 'grid_3') do %>
  <% link_to(artist) do %>
    <%= image_tag(artist.releases.first.artwork.url(:small), :size => '125x125', :alt => 'Cover art') %>
  <% end %>
  <%= link_to(h(artist.name), artist, :class => 'name') %>
  <span class="meta">
    <%= pluralize(artist.releases.size, 'release') %>,
    <%= pluralize(artist.tracks.size, 'track')%>
  </span>
<% end %>
<% end %>