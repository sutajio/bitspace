<%= {
  :name => @artist.name,
  :releases => @artist.releases.map {|release|
    {
      :title => release.title,
      :year => release.year,
      :url => release_url(release),
      :playlist_url => playlist_release_url(release),
      :tracks => tracks_to_hash(release.tracks),
      :small_artwork_url => release.artwork.file? ? release.artwork.url(:small, false) : nil,
      :medium_artwork_url => release.artwork.file? ? release.artwork.url(:medium, false) : nil,
      :large_artwork_url => release.artwork.file? ? release.artwork.url(:large, false) : nil
    }
  },
  :biography_url => biography_artist_url(@artist),
  :playlist_url => playlist_artist_url(@artist),
  :small_artwork_url => @artist.artwork.file? ? @artist.artwork.url(:small, false) : nil,
  :large_artwork_url => @artist.artwork.file? ? @artist.artwork.url(:large, false) : nil
}.to_json %>