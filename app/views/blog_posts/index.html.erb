<div class="container_16 clearfix">
  <div class="grid_9 prefix_1">
    <% if @posts.empty? %>
      <p class="fallback">
        It seems we haven't written anything in the blog yet.
      </p>
    <% else %>
      <%= render :partial => 'post', :collection => @posts %>
      <%= will_paginate(@posts) %>
    <% end %>
  </div>
  <div class="grid_5 suffix_1">
    <%= render :partial => 'sidebar' %>
  </div>
</div>