<% content_tag_for(:li, release, :class => 'clearfix') do %>
  <div class="info">
    <% if release.artwork.file? %>
    <%= link_to(image_tag(release.artwork.url(:small), :size => '125x125', :alt => 'Cover art'), release.artwork.url(:medium), :class => 'cover-art', :rel => 'shadowbox') %>
    <% else %>
    <%= link_to(image_tag(release.artwork.url(:small), :size => '125x125', :alt => 'Cover art'), edit_artist_release_path(release.artist, release), :class => 'cover-art', :title => 'Click here to upload cover art for this release', :target => '_self') %>
    <% end %>
    <h2>
      <%= link_to(h(release.title), [release.artist, release], :target => '_self') %>
      <% if release.year.present? %>
      <span class="year">(<%= link_to(release.year, year_path(release.year), :target => '_self') %>)</span>
      <% end %>
    </h2>
    <h3><%= link_to(h(release.artist.name), release.artist, :target => '_self') %></h3>
  </div>
  <ol class="tracks">
    <%= render :partial => 'tracks/track', :collection => release.tracks %>
  </ol>
<% end %>