<% content_tag_for(:li, release, :class => 'clearfix') do %>
  <div class="info">
    <%= link_to(image_tag(release.artwork.url(:small), :size => '125x125'), release.artwork.file? ? release.artwork.url(:medium) : "##{dom_id(release)}_edit", :alt => 'Cover art', :class => 'cover-art', :rel => 'shadowbox') %>
    <div id="<%= dom_id(release) %>_edit" style="display:none">
      <%= render :partial => 'upload_artwork', :locals => { :release => release } %>
    </div>
    <h2>
      <%=h release.title %>
      <% if release.year.present? %>
      <span class="year">(<%= release.year %>)</span>
      <% end %>
    </h2>
    <h3><%=h release.artist.name %></h3>
  </div>
  <ol class="tracks">
    <%= render :partial => 'tracks/track', :collection => release.tracks %>
  </ol>
<% end %>