<% content_tag_for(:li, release, :class => 'clearfix') do %>
  <div class="info">
    <% if release.artwork.file? %>
    <%= link_to(image_tag(release.artwork.url(:small), :size => '125x125', :alt => 'Cover art'), release.artwork.url(:medium), :class => 'cover-art', :rel => 'shadowbox') %>
    <% else %>
    <%= link_to(image_tag(release.artwork.url(:small), :size => '125x125', :alt => 'Cover art'), edit_artist_release_path(@artist, release), :class => 'cover-art', :title => 'Click here to upload cover art for this release', :target => '_self') %>
    <% end %>
    <h2>
      <%=h release.title %>
      <% if release.year.present? %>
      <span class="year">(<%= release.year %>)</span>
      <% end %>
    </h2>
    <h3><%=h release.artist.name %></h3>
  </div>
  <ol class="tracks">
    <%= render :partial => 'tracks/track', :collection => release.tracks %>
  </ol>
<% end %>