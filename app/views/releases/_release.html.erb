<% content_tag_for(:li, release, :class => 'clearfix') do %>
  <div class="info">
    <% if release.artwork.file? %>
    <%= link_to(image_tag(release.artwork.url(:small, false), :size => '125x125', :alt => 'Cover art'), release.artwork.url(:large, false), :class => 'cover-art', :rel => 'shadowbox') %>
    <% else %>
    <%= link_to(image_tag(release.artwork.url(:small, false), :size => '125x125', :alt => 'Cover art'), edit_artist_release_path(release.artist, release), :class => 'cover-art', :title => 'Click here to upload cover art for this release', :target => '_self') %>
    <% end %>
    <% unless (params[:controller] == 'releases' && params[:action] == 'show') %>
    <h2>
      <%= link_to(h(release.title), [release.artist, release], :target => '_self') %>
      <% if release.year.present? %>
      <span class="year">(<%= link_to(release.year, year_path(release.year), :target => '_self') %>)</span>
      <% end %>
    </h2>
    <h3><%= link_to(h(release.artist.name), release.artist, :target => '_self') %></h3>
    <% end %>
  </div>
  <% release.tracks.sort_by{|t| t.set_nr.to_i }.group_by(&:set_nr).each do |set_nr, tracks| %>
  <ol class="tracks">
    <%= render :partial => 'tracks/track', :collection => tracks.sort_by(&:track_nr) %>
  </ol>
  <% end %>
  <% if params[:controller] == 'releases' && params[:action] == 'show' %>
  <div class="actions">
    <!-- <%= link_to(image_tag('/images/share.png'), artist_release_url(release.artist, release), :title => 'Share', :target => '_blank') %> -->
    <%= link_to(image_tag('/images/edit.png'), edit_artist_release_path(release.artist, release), :target => '_self', :title => 'Edit') %>
    <%= link_to(image_tag('/images/smiley_frown.png'), archive_artist_release_path(release.artist, release), :title => 'Archive', :rel => 'archive', :class => release.archived? ? 'archived' : nil) %>
    <%= link_to(image_tag('/images/delete.png'), artist_release_path(release.artist, release), :title => 'Delete', :rel => 'delete') %>
  </div>
  <div class="meta">
    <% if release.release_date.present? %>
    <p class="release-date small grey">
      <label>Released:</label> <%= release.release_date %>
    </p>
    <% end %>
  </div>
  <% end %>
<% end %>