<% cache label do %>
  <% content_tag_for(:div, label, :class => 'tile', :title => label.name) do %>
    <% link_to(label, :target => '_self') do %>
      <% if label.artwork.file? %>
        <%= image_tag(label.artwork.url(:original, false), :width => label.artwork.width, :height => label.artwork.height, :alt => 'Artwork') %>
      <% else %>
        <%= image_tag((label.releases.first_with_artwork || label.artists.first_with_artwork || Release.new).artwork.url(:small, false), :size => '125x125', :alt => 'Artwork') %>
      <% end %>
    <% end %>
  <% end %>
<% end %>