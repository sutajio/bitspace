<div id="share-footer">
  <div class="container_16 clearfix">
    <div class="grid_16 aligncenter">
      <div>
        Follow us on <a href="http://twitter.com/bitspaced">Twitter</a> /
        Become a fan on <a href="http://www.facebook.com/pages/Bitspace/172171790806">Facebook</a>
      </div>
      <div class="grey">
        Bitspace is currently <%= 'PRIVATE' if ENV['PRIVATE_BETA'] %> BETA software.
      </div>
      <div class="save-elsewhere">
        <% link_to("http://del.icio.us/post?url=#{root_url}&title=Bitspace", :target => '_blank', :title => 'Save on del.icio.us') do %>
          <%= image_tag('/images/share/delicious.gif') %>
        <% end %>
        <% link_to("http://www.facebook.com/share.php?u=#{root_url}&t=Bitspace", :target => '_blank', :title => 'Share on Facebook') do %>
          <%= image_tag('/images/share/facebook.gif') %>
        <% end %>
        <% link_to("http://digg.com/submit?url=#{root_url}&title=Bitspace&bodytext=&media=news&topic=music", :target => '_blank', :title => 'Post at Digg') do %>
          <%= image_tag('/images/share/digg.gif') %>
        <% end %>
        <% link_to("http://twitter.com/home?status=Bitspace:%20#{root_url}", :target => '_blank', :title => 'Tweet on Twitter') do %>
          <%= image_tag('/images/share/twitter.gif') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
