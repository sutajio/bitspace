      <input type="hidden" name="cmd" value="_s-xclick">
      <input type="hidden" name="hosted_button_id" value="<%= User::SUBSCRIPTION_PLANS[:standard][:paypal_button_id] %>">
      <input type="image" src="https://www.paypal.com/en_US/i/btn/btn_subscribeCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!"<% if ENV['PRIVATE_BETA'] %> disabled="disabled" style="opacity:0.5;"<% end %>>
      <img alt="" border="0" src="https://www.paypal.com/sv_SE/i/scr/pixel.gif" width="1" height="1">
      </form>
    </div>
  </div>
  
  <div class="grid_4 suffix_2 aligncenter">
